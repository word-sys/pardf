Package: word-sys-pdf-editor
Architecture: all
Depends: ${python3:Depends},
         ${misc:Depends},
         python3-gi,
         python3-gi-cairo,
         gir1.2-gtk-4.0,
         gir1.2-adw-1,
         python3-numpy,
